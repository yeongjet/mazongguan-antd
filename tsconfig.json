{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "jsx": "react",
        "lib": ["es7", "dom"]
    },
    "include": [
        "./src/**/*"
    ]
}